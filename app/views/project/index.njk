{% extends "layouts/authenticated.njk" %}
{% block content %}
  <header>
    <h2>{{ project.name }}</h2>
    <div class="addon">
      <a href="" class="btn btn-danger">Excluir projeto</a>
    </div>
  </header>
  <section id="content">
    {% if activeSection %}
      {% include "partials/section.njk" %}
    {% else %}
      <div class="notification">
        <p>
        Ainda não há uma seção registrada!!<br />
        Não perca mais tempo, faça isso agora!!<br />
        <br>
        </p>
        <a href="#" data-modal-open="#new-section" class="btn" >Nova seção</a>
      </div>
    {% endif %}
  </section>
  <div class="modal" id="new-section">
    <form class="modal-content" method="POST" action="/app/section/store/{{ project.id }}">
      <input type="text" name="title" placeholder="Título da seção">
      <textarea id="content" name="content" placeholder="Conteúdo da seção"></textarea>
      <button type="submit">SALVAR SEÇÃO</button>
      <a href="#" data-modal-close="#new-section">CANCELAR</a>
    </form>
  </div>
{% endblock %}
