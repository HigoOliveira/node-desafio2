{% extends "layouts/authenticated.njk" %}
{% block content %}
  <header>
    <h2>{{ project.name }}</h2>
    <div class="addon">
      <a href="" class="btn btn-danger">Excluir projeto</a>
    </div>
  </header>
  <section id="content">
    <nav>
      <div class="sessions">
        {% for section in project.Sections %}
          <a href="">{{ section.title }}</a>
        {% endfor %}
      </div>

      <a href="#" class="btn" >Nova seção</a>
    </nav>

    <article>
      <form action="" method="POST">
        <input type="text" name="title" placeholder="Digite o nome da seção">
        <textarea id="content" name="content" placeholder="Conteúdo da seção"></textarea>
        <button type="submit" class="btn">Salvar</button>
      </form>
    </article>
  </section>
{% endblock %}
